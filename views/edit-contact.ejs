<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h2>Form ubah data contact</h2>

      <% if (typeof errors != 'undefined') { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(e => { %>
          <li><%= e.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <form method="POST" action="/contact?_method=PUT">
        <input type="hidden" name="_id" value="<%= contact._id %>" />
        <input
          type="hidden"
          name="oldNama"
          id="oldNama"
          value="<%= (contact.oldNama) ? contact.oldNama : contact.nama %>"
        />
        <div class="mb-3">
          <label for="nama" class="form-label">Nama</label>
          <input
            type="text"
            class="form-control"
            id="nama"
            name="nama"
            value="<%= contact.nama %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            value="<%= contact.email %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="no" class="form-label">No HP</label>
          <input
            type="text"
            class="form-control"
            id="no"
            name="no"
            value="<%= contact.no %>"
            required
          />
        </div>

        <button type="submit" class="btn btn-primary">Ubah Data Contact</button>
      </form>
    </div>
  </div>
</div>
